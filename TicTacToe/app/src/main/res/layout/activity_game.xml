<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Mode"
        android:layout_width="match_parent"
        android:id="@+id/mode"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_height="100dp"
        android:gravity="center_vertical|center_horizontal"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="true" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/row1col1"
        android:background="@android:color/holo_blue_light"
        android:layout_marginRight="15dp"
        android:layout_above="@+id/row2col1"
        android:layout_alignStart="@+id/row2col1"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/row1col2"
        android:background="@android:color/holo_blue_light"
        android:layout_above="@+id/row2col2"
        android:layout_toEndOf="@+id/row1col1"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/row1col3"
        android:background="@android:color/holo_blue_light"
        android:layout_alignBottom="@+id/row1col2"
        android:layout_alignStart="@+id/row2col3" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/row2col1"
        android:background="@android:color/holo_blue_light"
        android:layout_marginRight="15dp"
        android:layout_above="@+id/row3col1"
        android:layout_alignStart="@+id/row3col1" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/row2col2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_light" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/row2col3"
        android:background="@android:color/holo_blue_light"
        android:layout_above="@+id/row3col3"
        android:layout_alignStart="@+id/row3col3" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/row3col1"
        android:background="@android:color/holo_blue_light"
        android:layout_below="@+id/row2col2"
        android:layout_toStartOf="@+id/row3col2"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/row3col2"
        android:background="@android:color/holo_blue_light"
        android:layout_below="@+id/row2col2"
        android:layout_alignStart="@+id/row2col2"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/row3col3"
        android:background="@android:color/holo_blue_light"
        android:layout_below="@+id/row2col2"
        android:layout_toEndOf="@+id/row3col2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:text="Score X = 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/textViewScoreX"
        android:textSize="36sp"
        android:layout_below="@+id/row3col1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Score O = 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/textViewScoreO"
        android:textSize="36sp"
        android:layout_below="@+id/textViewScoreX"
        android:layout_alignEnd="@+id/textViewScoreX" />

</RelativeLayout>